<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="content_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="content_row_even" parent="content_row">
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:background">@drawable/wines_row_content_even</item>
    </style>

    <style name="content_row_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/wines_row_content_button</item>
    </style>

    <style name="events_row_button">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/calendar_row_button</item>
    </style>

    <style name="events_row_titles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toRightOf">@id/events_top_indicator</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">@color/wines_content_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
</resources>