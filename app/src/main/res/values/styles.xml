<resources>

    <style name="AppTheme" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="DatePicker" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/dialog_add_background_transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@style/DatePickerTitle</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:datePickerStyle">@android:style/Widget.DatePicker</item>
    </style>

    <style name="DatePickerTitle">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/dialog_add_background_transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="title_bar_button">
        <item name="android:background">@drawable/wines_title_back_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="title_bar_button_image">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="title_bar_button_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
