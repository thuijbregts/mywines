<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="wines_label">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/wines_label_color</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">35</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="wines_top_list">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/wines_top_list_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="wines_top_list_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">17</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/wines_activity_sort_background</item>
    </style>

    <style name="wines_top_list_indicator">
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
    </style>

    <style name="wines_footer_text" parent="wines_top_list">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/wines_footer_text</item>
    </style>

    <style name="wines_content" parent="wines_label">
        <item name="android:layout_weight">65</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/wines_content_color</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="wines_top_row">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/wines_content_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="wines_separator">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@color/wines_separator</item>
    </style>
</resources>